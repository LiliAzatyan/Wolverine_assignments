#include <iostream>
#include <vector>
#include <string>

std::vector<std::string> split(const std::string &);

int main()
{
        std::string str = "mov r1, 4";
        std::vector<std::string> vec = split(str);
        for (auto i: vec) {
                std::cout << i << " ";
        }
}

std::vector<std::string> split(const std::string & str)
{
        std::vector<std::string> vec;
        std::string st = "";
        int index = 0;
        while (str[index] != ' ')
        {
                st += str[index];
                ++index;
        }
        vec.push_back(st);
        st = "";
        while (str[index] == ' ' || str[index] != ',')
        {
                st += str[index];
                ++index;
        }
        ++index;
        vec.push_back(st);
        st = "";
        while (str[index] != '\0')
        {
                st += str[index];
                ++index;
        }
        vec.push_back(st);
        st = "";
        return vec;
}
